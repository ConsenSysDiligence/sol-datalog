{
    "name": "@consensys/sol-datalog",
    "version": "0.0.0",
    "description": "Translator from Solidity AST to Datalog for later use with Souffle",
    "files": [
        "dist"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "sol-datalog-cli": "dist/bin/cli.js"
    },
    "scripts": {
        "clean": "rm -rf dist/ && rm -rf src/gen/declarations.ts src/gen/translate.ts",
        "transpile": "tsc",
        "gen-preamble": "node scripts/gen_preamble.js && eslint --fix src/gen/translate.ts src/gen/declarations.ts",
        "build": "npm run clean && npm run gen-preamble && npm run transpile && chmod a+x dist/bin/cli.js",
        "test": "c8 mocha",
        "lint": "eslint src/ test/ --ext=ts",
        "lint:fix": "eslint src/ test/ --ext=ts --fix",
        "coverage": "c8 report",
        "prepare": "npm run build"
    },
    "dependencies": {
        "commander": "^11.1.0",
        "dotenv": "^16.3.1",
        "fs-extra": "^11.1.1",
        "solc-typed-ast": "^17.0.2"
    },
    "devDependencies": {
        "@ts-ast-parser/core": "^0.6.2",
        "@types/fs-extra": "^11.0.3",
        "@types/mocha": "^10.0.3",
        "@types/node": "^16.18.60",
        "@typescript-eslint/eslint-plugin": "^6.9.1",
        "@typescript-eslint/parser": "^6.9.1",
        "c8": "^8.0.1",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "expect": "^29.7.0",
        "mocha": "^10.2.0",
        "prettier": "3.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "@ts-ast-parser/core": "^0.6.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Consensys/sol-datalog.git"
    },
    "keywords": [
        "solidity",
        "datalog",
        "souffle"
    ],
    "author": "",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/Consensys/sol-datalog/issues"
    },
    "homepage": "https://github.com/Consensys/sol-datalog#readme"
}
