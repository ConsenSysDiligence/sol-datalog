{
    "extension": [".ts"],
    "exclude": [
        "**/*.d.ts",
        "**/node_modules/**",
        "**/dist/**",
        "**/test/**",
        "**/coverage/**",
        "**/.compiler_cache/**",
        "**/scripts/**",
        "src/bin/cli.ts",
        "src/bin/llm-features.ts",
        "src/lib/souffle/value_header.ts",
        "src/lib/souffle/value_parser.ts"
    ],
    "reporter": ["lcov", "text-summary"],
    "all": true,
    "check-coverage": true,
    "statements": 90,
    "branches": 85,
    "functions": 85,
    "lines": 90
}
